{
  "name": "code-pulse",
  "displayName": "CodePulse",
  "description": "Tracks coding activity for GitHub contributions",
  "keywords": ["git", "productivity", "tracking", "activity"],
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.107.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "*"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "code-pulse.helloWorld",
        "title": "Hello World"
      }
    ],
    "configuration": {
      "title": "CodePulse",
      "properties": {
        "codepulse.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable or disable CodePulse tracking"
        },
        "codepulse.snapshotIntervalMinutes": {
          "type": "number",
          "default": 30,
          "minimum": 5,
          "description": "How often CodePulse snapshots activity (in minutes)"
        },
        "codepulse.enableGitSync": {
          "type": "boolean",
          "default": true,
          "description": "Automatically commit and push snapshots to GitHub"
        },
        "codepulse.enableNotifications": {
          "type": "boolean",
          "default": true,
          "description": "Show notifications for sync status"
        },
        "codepulse.repoUrl": {
          "type": "string",
          "default": "",
          "description": "Git repository URL where CodePulse will store activity (must be an existing repo)"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.107.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "typescript-eslint": "^8.48.1",
    "eslint": "^9.39.1",
    "typescript": "^5.9.3",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2"
  }
}